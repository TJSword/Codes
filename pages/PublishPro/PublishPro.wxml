<view class="publishPro_wrap">
  <view class="left_title" style="margin-top:{{statusBarHeight}}px" bindtap = "goBack">
    <view class="iconfont icon-fanhui"></view>
    <view class="title">创建项目</view>
  </view>
  <view class="detailBox" >
    <view class="label_box" data-id="0" bindtap="choose_box">
      <view class="title {{chooseAniBox[0]?'title_on':''}}">项目名称</view>
      <input class="label_input" wx:if="{{chooseAniBox[0]}}" focus="true" cursor-spacing="20" bindinput='pro_name' bindblur="pro_name_blur"></input>
      <view class="border {{chooseAniBox[0]?'animation':''}}"></view>
    </view>
    <view class="label_box" data-id="1" bindtap="choose_box">
      <view class="title {{chooseAniBox[1]?'title_on':''}}">选择 PM</view>
          <picker bindchange="pm"  range="{{pmArr}}" bindcancel="pmCancel" data-id="4"> 
            <view class="label_input">{{pmArr[pmIndex]}}</view>
          </picker>
      <view class="border {{chooseAniBox[1]?'animation':''}}"></view>
    </view>
   
    <view class="label_box label_box_textarea {{chooseAniBox[7]?'textarea':''}}" data-id="7" bindtap="choose_box">
      <view class="title {{chooseAniBox[7]?'title_on':''}}">项目简介</view>
      <textarea class="label_textarea" wx:if="{{chooseAniBox[7]}}" focus="true" cursor-spacing="80" bindinput="pro_content" bindblur = 'pro_content_blur' focus="true"></textarea>
      <!-- <view class="border "></view> -->
    </view>
  </view>
  <view class="publish_btn" bindtap = "submit">发布项目</view>
  <view class="loading" wx:if="{{loading}}">
    <view class="loader_box">
       <text class="loader"><text class="loader-inner"></text></text>
    </view>
  </view>
</view>
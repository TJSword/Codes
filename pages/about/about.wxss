Page {
  height: 100%;
  width: 100%;
  overflow: hidden;
}
Page .about {
  height: 100%;
  width: 100%;
}
Page .about .bg {
  height: 100%;
  width: 100%;
  position: fixed;
  z-index: -10;
}
Page .about .base {
  height: 100%;
  width: 100%;
  background: linear-gradient(180deg, rgba(255, 255, 255, 0) 0%, #ffffff 50%);
}
Page .about .base .left_title {
  position: absolute;
  left: 32rpx;
  height: 45px;
  width: 202rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
Page .about .base .left_title .left {
  height: 44rpx;
  width: 24rpx;
}
Page .about .base .left_title .title {
  font-size: 40rpx;
  color: #2b3e43;
  font-family: pingfang;
  font-weight: 400;
}
Page .about .base .logo_box {
  height: 360rpx;
  width: 268rpx;
  position: absolute;
  top: 17%;
  left: 32%;
}
Page .about .base .logo_box .logo {
  height: 268rpx;
  width: 268rpx;
  border-radius: 50%;
}
Page .about .base .logo_box .name {
  color: #2b3e43;
  font-size: 36rpx;
  text-align: center;
  font-family: pingfang;
  font-weight: bold;
}
Page .about .base .logo_box .versions {
  font-size: 24rpx;
  font-family: pingfang;
  text-align: center;
  color: #9aacb1;
  margin-top: 8rpx;
}
Page .about .base .option_box {
  width: 622rpx;
  height: 27%;
  position: absolute;
  top: 46%;
  left: 64rpx;
}
Page .about .base .option_box .option {
  height: 64rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10%;
  font-weight: bold;
}
Page .about .base .option_box .option .shareButton {
  height: 64rpx;
  width: 100%;
  position: absolute;
  opacity: 0;
}
Page .about .base .option_box .option .option_name {
  font-family: pingfang;
  font-size: 36rpx;
  letter-spacing: 2rpx;
  color: #333333;
}
Page .about .base .option_box .option .option_icon {
  height: 33rpx;
  width: 18rpx;
}
Page .about .base .author {
  height: 80rpx;
  width: 372rpx;
  position: absolute;
  bottom: 6%;
  left: 189rpx;
}
Page .about .base .mark_layer {
  height: 100%;
  width: 100%;
  position: absolute;
  background: rgba(0, 0, 0, 0);
  z-index: 60;
  transition: 3s;
}
Page .about .base .mark_layer .feedback_box,
Page .about .base .mark_layer .reward_box {
  height: 750rpx;
  width: 100%;
  background: #ffffff;
  border-radius: 32rpx 32rpx 0rpx 0rpx;
  position: absolute;
  bottom: -750rpx;
}
Page .about .base .mark_layer .feedback_box .loved,
Page .about .base .mark_layer .reward_box .loved {
  position: absolute;
  top: 48rpx;
  left: 32rpx;
  font-weight: 400;
  color: #333333;
  font-size: 36rpx;
}
Page .about .base .mark_layer .feedback_box .finger,
Page .about .base .mark_layer .reward_box .finger {
  height: 80rpx;
  width: 52rpx;
  position: absolute;
  top: 32rpx;
  right: 32rpx;
}
Page .about .base .mark_layer .feedback_box .money_box,
Page .about .base .mark_layer .reward_box .money_box {
  height: 272rpx;
  width: 686rpx;
  position: absolute;
  top: 178rpx;
  left: 32rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: center;
}
Page .about .base .mark_layer .feedback_box .money_box .money_item,
Page .about .base .mark_layer .reward_box .money_box .money_item {
  height: 116rpx;
  width: 202rpx;
  background: #f2f3f5;
  border-radius: 16rpx;
  border: 4rpx solid rgba(0, 0, 0, 0);
  display: flex;
  justify-content: center;
  align-items: center;
  flex-shrink: 0;
  margin-bottom: 40rpx;
  transition: 0.3s;
}
Page .about .base .mark_layer .feedback_box .money_box .money_item .money_img,
Page .about .base .mark_layer .reward_box .money_box .money_item .money_img {
  height: 32rpx;
  width: 28rpx;
  flex-shrink: 0;
}
Page .about .base .mark_layer .feedback_box .money_box .money_item .money_num,
Page .about .base .mark_layer .reward_box .money_box .money_item .money_num {
  font-size: 60rpx;
  margin-left: 18rpx;
}
Page .about .base .mark_layer .feedback_box .money_box .active,
Page .about .base .mark_layer .reward_box .money_box .active {
  background: rgba(39, 212, 160, 0.05);
  border: 4rpx solid #27d4a0;
  color: #27D4A0;
  transition: 0.3s;
}
Page .about .base .mark_layer .feedback_box .text,
Page .about .base .mark_layer .reward_box .text {
  height: 444rpx;
  width: 606rpx;
  background: #f2f3f5;
  border-radius: 8px;
  margin-top: 32rpx;
  margin-left: 32rpx;
  padding-top: 32rpx;
  padding-left: 40rpx;
  padding-right: 40rpx;
  font-size: 32rpx;
}
Page .about .base .mark_layer .feedback_box .feedback_button,
Page .about .base .mark_layer .reward_box .feedback_button {
  width: 686rpx;
  height: 96rpx;
  background: #ff4937;
  box-shadow: 0px 8px 20px 0px rgba(255, 73, 55, 0.4);
  border-radius: 48rpx;
  margin-top: 48rpx;
  font-size: 36rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #ffffff;
  letter-spacing: 2rpx;
}
Page .about .base .mark_layer .money_button {
  width: 686rpx;
  height: 96rpx;
  background: #27d4a0;
  box-shadow: 0rpx 8rpx 20rpx 0rpx rgba(39, 212, 160, 0.4);
  border-radius: 48rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 36rpx;
  font-weight: 400;
  color: #ffffff;
  line-height: 50rpx;
  letter-spacing: 2rpx;
  position: absolute;
  bottom: 98rpx;
  left: 32rpx;
}

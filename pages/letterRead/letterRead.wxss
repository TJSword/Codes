Page {
  width: 100%;
  height: 100%;
  overflow: hidden;
}
Page .write {
  height: 100%;
  width: 100%;
}
Page .write .bg {
  height: 100%;
  width: 100%;
  position: absolute;
  z-index: -10;
}
Page .write .base {
  height: 100%;
  width: 100%;
  background: linear-gradient(180deg, rgba(255, 255, 255, 0) 0%, #ffffff 50%);
  position: absolute;
}
Page .write .base .left_title {
  position: absolute;
  left: 32rpx;
  height: 45px;
  width: 202rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
Page .write .base .left_title .left {
  height: 44rpx;
  width: 24rpx;
}
Page .write .base .left_title .title {
  font-size: 40rpx;
  color: #2b3e43;
  font-weight: 400;
}
Page .write .base .write_box {
  height: 83%;
  width: 718rpx;
  background: linear-gradient(180deg, #fffbf3 0%, #ffffff 100%);
  border-radius: 30px 30px 0px 0px;
  position: absolute;
  top: 12%;
  left: 16rpx;
}
Page .write .base .write_box .base_bg {
  height: 100%;
  width: 100%;
  position: absolute;
}
Page .write .base .write_box .shareButton {
  height: 44rpx;
  width: 44rpx;
  position: absolute;
  top: 20rpx;
  right: 24rpx;
  opacity: 0;
  background: pink;
  z-index: 10;
}
Page .write .base .write_box .share_wrong {
  height: 44rpx;
  width: 44rpx;
  position: absolute;
  top: 28rpx;
  right: 32rpx;
}
Page .write .base .write_box .writeTime {
  font-size: 22rpx;
  font-weight: 400;
  color: #78949c;
  position: absolute;
  left: 48rpx;
  top: 2%;
}
Page .write .base .write_box .writer {
  font-size: 36rpx;
  font-weight: 550;
  color: #2b3e43;
  position: absolute;
  left: 48rpx;
  top: 5.5%;
}
Page .write .base .write_box .title {
  font-size: 32rpx;
  color: #FEB978;
  position: absolute;
  top: 11%;
  left: 48rpx;
  font-family: cursive;
}
Page .write .base .write_box .textarea {
  position: absolute;
  top: 15%;
  left: 48rpx;
  width: 654rpx;
  font-size: 32rpx;
  font-weight: 400;
  color: #4d717b;
  line-height: 44rpx;
  height: 75%;
  overflow-y: scroll;
}
Page .write .blackCat {
  height: 204rpx;
  width: 172rpx;
  position: absolute;
  right: 0;
  bottom: 0;
}

Page {
  height: 100%;
  width: 100%;
  overflow: hidden;
}
Page .test_box {
  height: 100%;
  width: 100%;
}
Page .test_box .test_img {
  height: 100%;
  width: 100%;
}
Page .write {
  height: 100%;
  width: 100%;
  overflow: hidden;
}
Page .write .bg {
  height: 100%;
  width: 100%;
  position: absolute;
  z-index: -10;
}
Page .write .base {
  height: 100%;
  width: 100%;
  background: linear-gradient(180deg, rgba(255, 255, 255, 0) 0%, #ffffff 50%);
  position: absolute;
}
Page .write .base .left_title {
  position: absolute;
  left: 32rpx;
  height: 45px;
  width: 202rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
Page .write .base .left_title .left {
  height: 44rpx;
  width: 24rpx;
}
Page .write .base .left_title .title {
  font-size: 40rpx;
  color: #2b3e43;
  font-weight: 400;
}
Page .write .base .write_box {
  height: 83%;
  width: 718rpx;
  background: linear-gradient(180deg, #fffbf3 0%, #ffffff 100%);
  border-radius: 30px 30px 0px 0px;
  position: absolute;
  top: 12%;
  left: 16rpx;
}
Page .write .base .write_box .base_bg {
  height: 100%;
  width: 100%;
  position: absolute;
}
Page .write .base .write_box .send {
  height: 48rpx;
  width: 48rpx;
  top: 28rpx;
  right: 32rpx;
  position: absolute;
  z-index: 50;
}
Page .write .base .write_box .title {
  font-size: 32rpx;
  color: #FEB978;
  position: absolute;
  top: 36rpx;
  left: 48rpx;
  font-family: cursive;
}
Page .write .base .write_box .textarea {
  position: absolute;
  top: 100rpx;
  left: 48rpx;
  width: 654rpx;
  font-size: 32rpx;
  font-weight: 400;
  color: #4d717b;
  line-height: 44rpx;
  height: 85%;
  overflow-y: scroll;
}
Page .write .blackCat {
  height: 204rpx;
  width: 172rpx;
  position: absolute;
  right: 0;
  bottom: 0;
}
Page .write .wordsNumber {
  font-size: 26rpx;
  font-weight: 400;
  color: #c4d4d9;
  position: absolute;
  left: 48rpx;
  bottom: 84rpx;
  white-space: nowrap;
}

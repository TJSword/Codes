<view class="publishPro_wrap">
    <view class="left_title" style="margin-top:{{statusBarHeight}}px" bindtap = "goBack">
      <view class="iconfont icon-fanhui"></view>
      <view class="title">新增事件</view>
    </view>
    <view class="detailBox" >
      <view class="label_box" data-id="0" bindtap="choose_box">
        <view class="title {{chooseAniBox[0]?'title_on':''}}">事件名称</view>
        <input class="label_input" wx:if="{{chooseAniBox[0]}}" focus="true" cursor-spacing="20" bindinput='pro_name' bindblur="pro_name_blur"></input>
        <view class="border {{chooseAniBox[0]?'animation':''}}"></view>
      </view>
      <view class="label_box" data-id="1" bindtap="choose_box">
        <view class="title {{chooseAniBox[1]?'title_on':''}}">提醒日期</view>
            <picker bindchange="date" mode ='date'  bindcancel="dateCancel" data-id="1"> 
              <view class="label_input">{{remindDate}}</view>
            </picker>
        <view class="border {{chooseAniBox[1]?'animation':''}}"></view>
      </view>
      <view class="options_box">
        <view class="label_boxs_item" data-id="{{index + 2}}" bindtap="choose_box" wx:for="{{optionsBit}}" wx:key='*this'>
            <view class="title {{chooseAniBox[index + 2]?'title_on':''}}">提醒人{{index + 1}}</view>
            <picker bindchange="choosePattern" range="{{remindArr}}" bindcancel="choosePatternCancel" data-id="2" data-index="{{index}}"> 
              <view class="label_input">{{optionsArr[index].label}}</view>
            </picker>
            <view class="jianhao_box" wx:if="{{index>0}}" catchtap='minus'>
              <view class="iconfont icon-jianhao1" ></view>
            </view>

          <view class="border {{chooseAniBox[index + 2]?'animation':''}}"></view>
        </view>
        <view class="addIcon" style="{{optionsBit % 2 === 1?'margin-left:10%':''}}" bindtap="addOption">
          <view class="addText">添加提醒人</view>
          <view class='iconfont icon-jiahao'></view>
        </view>
     </view> 
    </view>
    <view class="publish_btn" bindtap = "submit">新增事件</view>
    <view class="loading" wx:if="{{loading}}">
      <view class="loader_box">
         <text class="loader"><text class="loader-inner"></text></text>
      </view>
    </view>
  </view>
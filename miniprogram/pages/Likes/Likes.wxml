<view class="likes_wrap"  bindtap="recovery">
  <view class="likes_box">
    <view class="likes_card {{chooseIndex  === index?'like_card_active':''}}" wx:for="{{likesData}}"  bindtouchstart='touchStart' catchtouchend="touchEnd" data-index="{{index}}" wx:key="_id">
      <view class="content">{{item.content}}</view>
      <view class="date_box">
        <image class="like_icon" src="../../images/{{item.type === 0?'like_icon':'unlike_icon'}}.png"></image>
        <view class="date">{{item.date[0]}}年{{item.date[1]}}月{{item.date[2]}}日</view>
      </view>
      <view class="delete_box">
        <image src="../../images/delete_icon.png" class="delete_icon" catchtap="deleteCard" data-id="{{item._id}}"></image>
      </view>
    </view>
  </view>
  <view class="total_num">累计{{likesData.length}}条记录</view>
</view>
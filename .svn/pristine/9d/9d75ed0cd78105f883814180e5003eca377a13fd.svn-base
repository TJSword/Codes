Page{
    height:100%;
    width:100%;
    overflow: hidden;
    .vote_wrap{
        height:100%;
        width:100%;
        background: linear-gradient(to top, #304352, #d7d2cc);
        overflow: hidden;
        .detail_box{
            padding:0 32rpx;
            height:88.8%;
            overflow: hidden;
            // display: flex;
            // flex-direction: column;
            // align-items: center;
            .title{
                width:100%;
                text-align: center;
                // background: pink;
                font-size:44rpx;
                font-weight: 700;
                margin-top:10rpx;
            }
            .content_box{
                margin-top:30rpx;
                display: block;
                padding: 0 30rpx;
                color:#2f3e46;
                font-size:28rpx;
                max-height:12%;
                overflow-y: scroll;
            }
            .classify_box{
                display: flex;
                align-items: center;
                padding: 0 30rpx;
                .type_box{
                    display: flex;
                    align-items: center;
                    width:65%;
                    .icon-lipeishijian{
                        color:#206b9c;
                        font-size:52rpx;
                    }
                    .type{
                        margin-left:20rpx;
                    }
                }
                .complexity_box{
                    width:35%;
                    display: flex;
                    align-items: center;
                    .icon-duoren2{
                        color:#206b9c;
                        font-size:50rpx;
                    }
                    .complexity{
                        margin-left:20rpx;
                    }
                }
            }
            .container{
                height:50%;
                width:100%;
                // 
            }
            .options_box{
                height:40%;
                width:100%;
                overflow-y: scroll;
                .options_item{
                    padding:0 30rpx;
                    display: flex;
                    align-items: center;
                    margin:60rpx 0;
                    .label{
                        font-size:30rpx;
                        color:#2f3e46;
                        margin-left:25rpx;
                    }
                    &:first-child{
                        margin-top:7rpx;
                    }
                }
            }
            .publish_btn{
                position: fixed;
                margin:auto;
                left:0;
                right:0;
                bottom: 6%;
                width:50%;
                height:80rpx;
                margin-bottom: 20rpx;
                border-radius: 40rpx;
                display: flex;
                justify-content: center;
                align-items: center;
                letter-spacing: 2rpx;
                background: rgba(0,129,255,0.8);
                color:white;
                &:active{
                    opacity: 0.8;
                }
            }
            .share_btn{
                position: fixed;
                margin:auto;
                left:0;
                right:0;
                bottom: 6%;
                width:50%;
                height:80rpx;
                margin-bottom: 20rpx;
                border-radius: 40rpx;
                display: flex;
                justify-content: center;
                align-items: center;
                letter-spacing: 2rpx;
                background: rgba(0,129,255,0.8);
                color:white;
                font-weight: 400!important;
                &:active{
                    opacity: 0.8;
                }
            }
        }
    }
}
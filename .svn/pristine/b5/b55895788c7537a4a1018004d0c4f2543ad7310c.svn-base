Page{
    height: 100%;
    width: 100%;
    .contractList_wrap{
        height:100%;
        width:100%;
        overflow: hidden;
        background: linear-gradient(to top, #304352, #d7d2cc); 
        // .input_box{
        //     width:calc(92% - 60px);
        //     display: flex;

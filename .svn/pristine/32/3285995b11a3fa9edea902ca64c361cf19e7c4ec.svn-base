Page{
    height:100%;
    width:100%;
    .Tasklist_wrap{
        height:100%;
        width:100%;
        background: linear-gradient(to top, #304352, #d7d2cc);
        overflow: hidden;
        .content_box{
            height: 88.8%;
            width: 100%;
            overflow-y: scroll;
            .title{
                display: flex;
                text-align: center;
                margin-top:20rpx;
                font-size:26rpx;
                width: 92%;
                margin-left: 4%;
                padding-bottom: 30rpx;
                border-bottom: 2rpx solid #ccc6c0;;
            }
            .card{
                height: 160rpx;
                width: 92%;
                margin-left: 4%;
                border-bottom: 2rpx solid #ccc6c0;;
                margin-top:20rpx;
                display: flex;
                &:last-child{
                    margin-bottom: 100rpx;
                }
                .box_1{
                    width: 40%;
                    text-align: center;
                    .task_title{
                        white-space: nowrap;
                        text-overflow: ellipsis;
                        overflow: hidden;
                        width: 100%;
                        font-size:30rpx;
                        height: 60rpx;
                        margin-top:15rpx;
                    }
                    .endDate{
                        width: 100%;
                        font-size: 26rpx;
                        height: 50rpx;
                        display: flex;
                        justify-content: center;
                        align-items: center;
                        margin-top:20rpx;
                    }
                }
                .box_2{
                    width: 20%;
                    display: flex;
                    flex-direction: column;
                    align-items: center;
                    .avator{
                        height: 60rpx;
                        width: 60rpx;
                        border-radius: 50%;
                    }
                    .name{
                        font-size:26rpx;
                        height:50rpx;
                        display: flex;
                        justify-content: center;
                        align-items: center;
                        margin-top:20rpx;
                    }
                }
                .box_3{
                    width: 20%;
                    display: flex;
                    flex-direction: column;
                    align-items: center;
                    font-size: 30rpx;
                    .difficulty{
                        width: 100%;
                        text-align: center;
                        font-size: 30rpx;
                        height: 60rpx;
                        display: flex;
                        justify-content: center;
                        align-items: center;
                    }
                    .hour{
                        width: 100%;
                        text-align: center;
                        height: 50rpx;
                        display: flex;
                        justify-content: center;
                        align-items: center;
                        margin-top:20rpx;
                    }
                }
                .box_4{
                    width: 20%;
                    font-size: 28rpx;
                    .num{
                        width: 100%;
                        text-align: center;
                        font-size: 28rpx;
                        height: 60rpx;
                        display: flex;
                        justify-content: center;
                        align-items: center;
                    }
                    .ratio{
                        width: 100%;
                        text-align: center;
                        font-size: 28rpx;
                        height:50rpx;
                        display: flex;
                        justify-content: center;
                        align-items: center;
                        margin-top:20rpx;
                    }
                }
            }
        }
        .publish_btn{
            position: fixed;
            margin:auto;
            left:0;
            right:0;
            bottom: 6%;
            width:50%;
            height:80rpx;
            margin-bottom: 20rpx;
            border-radius: 40rpx;
            display: flex;
            justify-content: center;
            align-items: center;
            letter-spacing: 2rpx;
            background: rgba(0,129,255,0.8);
            color:white;
            z-index: 9999;
            font-weight: 100!important;
            &:active{
                opacity: 0.8;
            }
        }
    }
}
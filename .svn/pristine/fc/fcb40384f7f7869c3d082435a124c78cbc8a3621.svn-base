// pages/Apportioned/Apportioned.js
import { request } from '../../utils/util.js';
const app = getApp()
Page({

  /**
   * 页面的初始数据
   */
  data: {
    statusBarHeight: app.globalData.statusBarHeight,
    chooseIndex:0
  },
  goBack: function (e) {//点击返回按钮 返回上一层页面
    wx.redirectTo({
      url: '../Index/Index',
    })
  },
  getProjectList(){
    request('/project/list','get',{
      title: "",
      state: "3",
      pm: ''
    }).then(res=>{
      console.log(res.searchResult)
      let pro_list = [];
      res.searchResult.forEach(item=>{
        pro_list.push(item.project_name)
      })
      this.setData({
        pro_list,
        pro_list_info: res.searchResult,
        havePro: pro_list.length === 0 ? false : true,
      })
      if(this.data.havePro){
        request('/demand/list', 'get', {
          title: "",
          projectId: this.data.pro_list_info[this.data.chooseIndex].project_id,
          state: "0",
          joiner: ""
        }).then(res1 => {
          request('/demand/list', 'get', {
            title: "",
            projectId: this.data.pro_list_info[this.data.chooseIndex].project_id,
            state: "3",
            joiner: ""
          }).then(res2 => {
            let arr = res1.searchResult.concat(res2.searchResult)
            console.log(arr)
            this.setData({
              demand_list: arr
            })
          })
        })
      }
    })
  },
  choosePro(e){
    this.setData({
      chooseIndex: e.detail.value
    })
    request('/demand/list', 'get', {
      title: "",
      projectId: this.data.pro_list_info[this.data.chooseIndex].project_id,
      state: "0",
      joiner: ""
    }).then(res1 => {
      request('/demand/list', 'get', {
        title: "",
        projectId: this.data.pro_list_info[this.data.chooseIndex].project_id,
        state: "3",
        joiner: ""
      }).then(res2 => {
        let arr = res1.searchResult.concat(res2.searchResult)
        console.log(arr)
        this.setData({
          demand_list: arr
        })
      })
    })
  },
  confirm(e){
    wx.showModal({
      content: '确认完成?',
      success: res => {
        if (res.confirm) {
          this.setData({
            loading: true
          })
          request('/project/confirm', 'post', {
            projectId: this.data.pro_list_info[this.data.chooseIndex].project_id
          }).then(res1 => {
            console.log(res1)
            this.setData({
              loading: false
            })
            if(res1.code === 0){
              
              wx.showToast({
                title: '确认成功',
                icon:'none'
              })
              setTimeout(() => {
                wx.redirectTo({
                  url: '../Index/Index',
                })
              }, 1000)
            }else{
              wx.showToast({
                title: '未知错误，请联系管理员',
                icon:'none'
              })
            }
          })
        }
      }
    })
  },
  setback(e){
    wx.showModal({
      content: '确认退回修改?',
      success:res=>{
        if(res.confirm){
          this.setData({
            loading: true
          })
          request('/project/operate','post',{
            id: this.data.pro_list_info[this.data.chooseIndex].project_id,
            state: "0"
          }).then(res1=>{
            this.setData({
              loading: false
            })
            console.log(res1)
            if(res1.code === 0){
              wx.showToast({
                title: '退回成功',
                icon: 'none'
              })
              setTimeout(() => {
                wx.redirectTo({
                  url: '../Index/Index',
                })
              }, 1000)
            }else{
              wx.showToast({
                title: '未知错误，请联系管理员',
                icon: 'none'
              })
            }
          })
        }
      }
    })
  },
  /**
   * 生命周期函数--监听页面加载
   */
  onLoad: function (options) {
    this.getProjectList()
  },

  /**
   * 生命周期函数--监听页面初次渲染完成
   */
  onReady: function () {

  },

  /**
   * 生命周期函数--监听页面显示
   */
  onShow: function () {

  },

  /**
   * 生命周期函数--监听页面隐藏
   */
  onHide: function () {

  },

  /**
   * 生命周期函数--监听页面卸载
   */
  onUnload: function () {

  },

  /**
   * 页面相关事件处理函数--监听用户下拉动作
   */
  onPullDownRefresh: function () {

  },

  /**
   * 页面上拉触底事件的处理函数
   */
  onReachBottom: function () {

  },

  /**
   * 用户点击右上角分享
   */
  onShareAppMessage: function () {

  }
})
Page {
  height: 100%;
  width: 100%;
}
Page .Tasklist_wrap {
  height: 100%;
  width: 100%;
  background: linear-gradient(to top, #304352, #d7d2cc);
  overflow: hidden;
}
Page .Tasklist_wrap .content_box {
  height: 88.8%;
  width: 100%;
  overflow-y: scroll;
}
Page .Tasklist_wrap .content_box .title {
  display: flex;
  text-align: center;
  margin-top: 20rpx;
  font-size: 26rpx;
  width: 92%;
  margin-left: 4%;
  padding-bottom: 30rpx;
  border-bottom: 2rpx solid #ccc6c0;
}
Page .Tasklist_wrap .content_box .card {
  height: 160rpx;
  width: 92%;
  margin-left: 4%;
  border-bottom: 2rpx solid #ccc6c0;
  margin-top: 20rpx;
  display: flex;
}
Page .Tasklist_wrap .content_box .card:last-child {
  margin-bottom: 100rpx;
}
Page .Tasklist_wrap .content_box .card .box_1 {
  width: 40%;
  text-align: center;
}
Page .Tasklist_wrap .content_box .card .box_1 .task_title {
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  width: 100%;
  font-size: 30rpx;
  height: 60rpx;
  margin-top: 15rpx;
}
Page .Tasklist_wrap .content_box .card .box_1 .endDate {
  width: 100%;
  font-size: 26rpx;
  height: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 20rpx;
}
Page .Tasklist_wrap .content_box .card .box_2 {
  width: 20%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
Page .Tasklist_wrap .content_box .card .box_2 .avator {
  height: 60rpx;
  width: 60rpx;
  border-radius: 50%;
}
Page .Tasklist_wrap .content_box .card .box_2 .name {
  font-size: 26rpx;
  height: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 20rpx;
}
Page .Tasklist_wrap .content_box .card .box_3 {
  width: 20%;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 30rpx;
}
Page .Tasklist_wrap .content_box .card .box_3 .difficulty {
  width: 100%;
  text-align: center;
  font-size: 30rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
Page .Tasklist_wrap .content_box .card .box_3 .hour {
  width: 100%;
  text-align: center;
  height: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 20rpx;
}
Page .Tasklist_wrap .content_box .card .box_4 {
  width: 20%;
  font-size: 28rpx;
}
Page .Tasklist_wrap .content_box .card .box_4 .num {
  width: 100%;
  text-align: center;
  font-size: 28rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
Page .Tasklist_wrap .content_box .card .box_4 .ratio {
  width: 100%;
  text-align: center;
  font-size: 28rpx;
  height: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 20rpx;
}
Page .Tasklist_wrap .publish_btn {
  position: fixed;
  margin: auto;
  left: 0;
  right: 0;
  bottom: 6%;
  width: 50%;
  height: 80rpx;
  margin-bottom: 20rpx;
  border-radius: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  letter-spacing: 2rpx;
  background: rgba(0, 129, 255, 0.8);
  color: white;
  z-index: 9999;
  font-weight: 100!important;
}
Page .Tasklist_wrap .publish_btn:active {
  opacity: 0.8;
}

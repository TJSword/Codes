Page{
    height:100%;
    width:100%;
    overflow: hidden;
    .demand_wrap{
        height:100%;
        width:100%;
        overflow: hidden;
        background: linear-gradient(to top, #304352, #d7d2cc);
        .detailBox{
            padding:0 32rpx;
            height:88.8%;
            overflow-y: scroll;
            .title{
                width:100%;
                text-align: center;
                font-size:44rpx;
                font-weight: 700;
                margin-top:10rpx;
            }
            .pro_title_box{
                display: flex;
                align-items: center;
                margin-top:30rpx;
                padding:0 30rpx;
                .icon-xiangmu{
                    color:#2980b9;
                    font-size:48rpx;
                }
                .icon-gongsi{
                    color:#2980b9;
                    font-size:48rpx;
                }
                .pro_title{
                    margin-left: 20rpx;
                }
            }
            .label_rp_box{
                display: flex;
                align-items: center;
                margin-top:30rpx;
                padding:0 30rpx;
                .label_box{
                    width:60%;
                    display: flex;
                    align-items: center;
                    .icon-fl-renyuan{
                        color:#2980b9;
                        font-size:50rpx;
                    }
                    .icon-nanyichengdu{
                        color:#2980b9;
                        font-size:50rpx;
                    }
                    .label{
                        margin-left:20rpx;
                    }
                }
                .commission_box{
                    display: flex;
                    align-items: center;
                    width:35%;
                    .commission_icon{
                        height:50rpx;
                        width:50rpx;
                        border-radius: 12rpx;
                        background: #2980b9;
                        display: flex;
                        justify-content: center;
                        align-items: center;
                        color:white;
                        font-size:30rpx;
                    }
                    .icon-bianhao{
                        margin-bottom:2rpx;
                        margin-left: 2rpx;
                    }
                    .commission_num{
                        margin-left:20rpx;
                    }
                }
                .rp_box{
                    display: flex;
                    width:40%;
                    align-items: center;
                    .rp_icon{
                        height:50rpx;
                        width:50rpx;
                        border-radius: 12rpx;
                        background: #2980b9;
                        display: flex;
                        justify-content: center;
                        align-items: center;
                        color:white;
                        font-size:20rpx;
                    }
                    .rp{
                        margin-left:20rpx;
                        .tip{
                           font-size:22rpx;
                           white-space: nowrap;
                        }
                    }
                }
            }
            .content_box{
                display: block;
                padding: 0 30rpx;
                color:#2f3e46;
                font-size:28rpx;
            }
            .time_box{
                display: flex;
                align-items: center;
                padding:0 30rpx;
                .icon-lipeishijian{
                    color:#2980b9;
                    font-size:50rpx;
                }
                .time_state{
                    display: flex;
                    margin-left:20rpx;
                    color: #212020;
                    align-items: center;
                    .state{
                        padding-right: 15rpx;
                        border-right: 1rpx solid #212020;
                        white-space:nowrap;
                    }
                    .time{
                        margin-left:15rpx;
                        white-space:nowrap;
                    }
                }
            }
            .pm_io_box{
                display: flex;
                padding:0 30rpx;
                align-items: center;
                margin-top:30rpx;
                .pm_box{
                    display: flex;
                    align-items: center;
                    width:60%;
                    .pm_icon{
                        height:50rpx;
                        width:50rpx;
                        border-radius: 12rpx;
                        background: #2980b9;
                        display: flex;
                        justify-content: center;
                        align-items: center;
                        color:white;
                        font-size:20rpx;
                    }
                    .pm_avator{
                        margin-left:20rpx;
                        height:70rpx;
                        width:70rpx;
                        border-radius: 50%;
                    }
                    .pm_name{
                        margin-left:20rpx;
                    }
                }
                .io_box{
                    display: flex;
                    align-items: center;
                    width:40%;
                    .io_icon{
                        height:50rpx;
                        width:50rpx;
                        border-radius: 12rpx;
                        background: #2980b9;
                        display: flex;
                        justify-content: center;
                        align-items: center;
                        color:white;
                        font-size:20rpx;
                    }
                    .io_avator{
                        margin-left:20rpx;
                        height:70rpx;
                        width:70rpx;
                        border-radius: 50%;
                    } 
                    .io_name{
                        margin-left:20rpx;
                        white-space: nowrap;
                    }
                }
            }
            .payment_box{
                padding:10rpx 30rpx;
                .payment{
                    display: flex;
                    margin-bottom: 15rpx;
                    color:#2f3e46;
                }
            }
            .image_box{
                padding:  6rpx 30rpx;
                padding-bottom: 60rpx;
                height: fit-content;
                .image{
                    width: 200rpx;
                    height: 200rpx;
                    margin-right:9rpx;
                    margin-top:11rpx;
                }
            }
            .progress_box{
                display: flex;
                padding:10rpx 30rpx;
                align-items: center;
                justify-content: center;
                .progress_item{
                    display: flex;
                    flex-direction: column;
                    align-items: center;
                    position: relative;
                    margin-right:20px;
                    width:33%;
                    color:#003049;
                    &::before{
                        content: "";
                        display: block;
                        position: absolute;
                        height: 0px;
                        width:80%;
                        border-bottom: 2rpx solid #003049;
                        left: -50%;
                        top: 30rpx;
                        z-index: 0;
                    }
                    &:first-child{
                        &::before{
                            display: none;
                        }
                    }
                    &:nth-child(2){
                        .item_name{
                            margin-top:20rpx;
                            font-size:24rpx;
                            padding: 4rpx 8rpx;
                            border:1rpx solid #2980b9;
                            background:#2980b9;
                            color:white;
                            margin-bottom:-9rpx;
                        }
                    }
                    &:nth-child(3){
                        .item_name{
                            margin-top:20rpx;
                            font-size:24rpx;
                            padding: 4rpx 8rpx;
                            border:1rpx solid #2980b9;
                            background:#2980b9;
                            color:white;
                            margin-bottom:-9rpx;
                        }
                    }
                    .icon-sanjiaotop{
                        font-size:62rpx;
                        margin-bottom:-8rpx;
                    }
                    .icon-yuanquan{
                        font-size:50rpx;
                    }
                    .icon-duihao{
                        font-size:46rpx;
                        margin-bottom:2rpx;
                    }
                    .item_name{
                        margin-top:20rpx;
                        font-size:24rpx;
                    }
                }
                .choose{
                    color:#fbbd08;
                    &::before{
                        content: "";
                        display: block;
                        position: absolute;
                        height: 0px;
                        width:80%;
                        border-bottom: 2rpx solid #fbbd08;
                        left: -50%;
                        top: 30rpx;
                        z-index: 0;
                    }
                    &:nth-child(2){
                        .item_name{
                            margin-top:20rpx;
                            font-size:24rpx;
                            padding: 0;
                            border:0;
                            background:transparent;
                            margin-bottom:-9rpx;
                            color:#fbbd08;
                        }
                    }
                    &:nth-child(3){
                        .item_name{
                            margin-top:20rpx;
                            font-size:24rpx;
                            padding: 0;
                            border:0;
                            background:transparent;
                            margin-bottom:-9rpx;
                            color:#fbbd08;
                        }
                    }
                    
                }
            }
            .comment_box{
                padding:0 30rpx;
                margin-top:30rpx;
                color:#011627;
                .rp_result_box{
                    display: flex;
                    align-items: center;
                    .icon-shenchajieguo{
                        color:#097dc0e0;
                        font-size:42rpx;
                    }
                    .rp_result{
                        margin-left:20rpx;
                    }
                }
                .comment{
                    margin-top:10rpx;
                }
            }
        }
        .model{
            height: 400rpx;
            width: 600rpx;
            background: linear-gradient(to top, #304352, #d7d2cc);
            position: fixed;
            top: 0;
            left: 0;
            bottom: 0;
            right: 0;
            margin: auto;
            border-radius: 16rpx;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: space-around;
            .guanbi{
                position: absolute;
                right: 20rpx;
                top: 6rpx;
                font-size: 40rpx;
            }
            .textarea{
                border: 1rpx solid rgba(0, 0, 0, .1);
                width: 80%;
                height: 50%;
                border-radius: 16rpx;
                padding: 2%;
                font-size: 28rpx;
                margin-top: 40rpx;
            }
            .publish_btn{
                width:50%;
                height:60rpx;
                margin-bottom: 20rpx;
                border-radius: 40rpx;
                display: flex;
                justify-content: center;
                align-items: center;
                letter-spacing: 2rpx;
                background: rgba(0,129,255,0.8);
                color:white;
                &:active{
                    opacity: 0.8;
                }
            }
        }
    }
}

<view class="issuedShare_wrap">
   <view class="left_title" style="margin-top:{{statusBarHeight}}px" bindtap = "goBack">
    <view class="iconfont icon-fanhui"></view>
    <view class="title">发布课题</view>
  </view>
  <view class="detailBox" >
      <view class="label_box" data-id="0" bindtap="choose_box">
        <view class="title {{chooseAniBox[0]?'title_on':''}}">课题名称</view>
        <input class="label_input" wx:if="{{chooseAniBox[0]}}" focus="true" cursor-spacing="20" bindinput='task_name' bindblur="task_name_blur"></input>
        <view class="border {{chooseAniBox[0]?'animation':''}}"></view>
      </view>
      <view class="label_box" data-id="1" bindtap="choose_box">
        <view class="title {{chooseAniBox[1]?'title_on':''}}">分享日期</view>
        <picker  mode="date" bindchange="task_date"  bindcancel="task_date_cancel" data-id="1"> 
          <view class="label_input" >{{taskDate}}</view>
        </picker>
        <view class="border {{chooseAniBox[1]?'animation':''}}"></view>
      </view>
      <view class="label_boxs" >
        <view class="label_boxs_item" data-id="2" bindtap="choose_box">
          <view class="title {{chooseAniBox[2]?'title_on':''}}">开始时间</view>
            <picker mode="time" bindchange="startTime" start="09:00"  bindcancel="startTimeCancel" data-id="2" end="{{endTime}}"> 
              <view class="label_input">{{startTime}}</view>
            </picker>
          <view class="border {{chooseAniBox[2]?'animation':''}}"></view>
        </view>

        <view class="label_boxs_item" data-id="3" bindtap="choose_box">
          <view class="title {{chooseAniBox[3]?'title_on':''}}">结束时间</view>
            <picker mode="time" bindchange="endTime"   bindcancel="endTimeCancel" data-id="3" start="{{startTime}}"> 
              <view class="label_input">{{endTime}}</view>
            </picker>
          <view class="border {{chooseAniBox[3]?'animation':''}}"></view>
        </view>
      </view>
      <view class="label_box label_box_textarea {{chooseAniBox[4]?'textarea':''}}" data-id="4" bindtap="choose_box">
        <view class="title {{chooseAniBox[4]?'title_on':''}}">课题简介</view>
        <textarea class="label_textarea" wx:if="{{chooseAniBox[4]}}"  focus="true" cursor-spacing="100" bindinput="task_content" bindblur="task_content_blur" maxlength="-1"></textarea>
        <!-- <view class="border "></view> -->
      </view>
  </view>
    <button class="publish_btn  {{isFinished?'active':''}}"  bindtap = "submit" style="font-weight: 400" open-type="{{isFinished?'share':''}}">{{isFinished?'分享至工作群':'发布课题'}}</button>
  <view class="loading" wx:if="{{loading}}">
    <view class="loader_box">
       <text class="loader"><text class="loader-inner"></text></text>
    </view>
  </view>
</view>
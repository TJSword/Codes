    <view class="label_boxs" >
      <view class="label_boxs_item" data-id="1" bindtap="choose_box">
        <view class="title {{chooseAniBox[1]?'title_on':''}}">项目 RP</view>
         <input class="label_input" wx:if="{{chooseAniBox[1]}}" focus="true" type="number" bindinput="pro_rp" bindblur="pro_rp_blur"></input>
        <view class="border {{chooseAniBox[1]?'animation':''}}"></view>
      </view>

      <view class="label_boxs_item" data-id="8" bindtap="choose_box">
       <view class="title {{chooseAniBox[8]?'title_on':''}}">项目佣金</view>
         <input class="label_input" wx:if="{{chooseAniBox[8]}}" focus="true" type="number" bindinput="pro_commission" bindblur="pro_commission_blur"></input>
        <view class="border {{chooseAniBox[8]?'animation':''}}"></view>
      </view>
    </view>
     <view class="label_boxs" >
      <view class="label_boxs_item" data-id="10" bindtap="choose_box">
        <!-- <view class="title {{chooseAniBox[2]?'title_on':''}}">项目类型</view>

         <picker bindchange="proLabel" range="{{xzbq}}" bindcancel="proLabelCancel" data-id="10"> 
            <view class="label_input">{{xzbq[proLabelIndex]}}</view>
          </picker>
        <view class="border {{chooseAniBox[10]?'animation':''}}"></view>
      </view>
      <view class="label_boxs_item" data-id="3" bindtap="choose_box">
       <view class="title {{chooseAniBox[3]?'title_on':''}}">难易程度</view>
      <picker bindchange="difficulty" range="{{difficultyArr}}" bindcancel="difficultyCancel" data-id="3"> 
        <view class="label_input">{{difficultyArr[difficultyIndex]}}</view>
      </picker>
      <view class="border {{chooseAniBox[3]?'animation':''}}"></view>
      </view>
    </view>

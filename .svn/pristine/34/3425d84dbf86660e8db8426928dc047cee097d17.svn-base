  <view class="label_boxs" >
      <view class="label_boxs_item" data-id="4" bindtap="choose_box">
         <view class="title {{chooseAniBox[4]?'title_on':''}}">选择 PM</view>
          <picker bindchange="pm"  range="{{pmArr}}" bindcancel="pmCancel" data-id="4"> 
            <view class="label_input">{{pmArr[pmIndex]}}</view>
          </picker>
          <view class="border {{chooseAniBox[4]?'animation':''}}"></view>
      </view>
      <view class="label_boxs_item" data-id="9" bindtap="choose_box">
       <view class="title {{chooseAniBox[9]?'title_on':''}}" >立项文件</view>
        <view class="label_input" bindtap="chooseFile" >{{fileName}}</view>
       <view class="border {{chooseAniBox[9]?'animation':''}}"></view>
      </view>
    </view>

    <!-- <view class="label_box" data-id="4" bindtap="choose_box">
      <view class="title {{chooseAniBox[4]?'title_on':''}}">选择 PM</view>
      <picker bindchange="pm"  range="{{pmArr}}" bindcancel="pmCancel" data-id="4"> 
        <view class="label_input">{{pmArr[pmIndex]}}</view>
      </picker>
      <view class="border {{chooseAniBox[4]?'animation':''}}"></view>
    </view> -->
    <view class="label_boxs" >
      <view class="label_boxs_item" data-id="5" bindtap="choose_box">
        <view class="title {{chooseAniBox[5]?'title_on':''}}">开始时间</view>
          <picker mode="date" bindchange="startDate"   bindcancel="startDateCancel" data-id="5" end="{{endDate}}"> 
            <view class="label_input">{{startDate}}</view>
          </picker>
        <view class="border {{chooseAniBox[5]?'animation':''}}"></view>
      </view>

      <view class="label_boxs_item" data-id="6" bindtap="choose_box">
        <view class="title {{chooseAniBox[6]?'title_on':''}}">结束时间</view>
          <picker mode="date" bindchange="endDate"   bindcancel="endDateCancel" data-id="6" start="{{startDate}}"> 
            <view class="label_input">{{endDate}}</view>
          </picker>
        <view class="border {{chooseAniBox[6]?'animation':''}}"></view>
      </view>
    </view>
    <view class="label_box label_box_textarea {{chooseAniBox[7]?'textarea':''}}" data-id="7" bindtap="choose_box">
      <view class="title {{chooseAniBox[7]?'title_on':''}}">项目简介</view>
      <textarea class="label_textarea" wx:if="{{chooseAniBox[7]}}" focus="true" cursor-spacing="80" bindinput="pro_content" bindblur = 'pro_content_blur' focus="true"></textarea>
      <!-- <view class="border "></view> -->
    </view>
  </view>
  <view class="publish_btn" bindtap = "submit">发布项目</view>
  <view class="loading" wx:if="{{loading}}">
    <view class="loader_box">
       <text class="loader"><text class="loader-inner"></text></text>
    </view>
  </view>
</view>
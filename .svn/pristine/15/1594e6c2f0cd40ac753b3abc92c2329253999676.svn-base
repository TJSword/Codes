<view class="releaseDemand_wrap">
  <view class="left_title" style="margin-top:{{statusBarHeight}}px" bindtap = "goBack">
    <view class="iconfont icon-fanhui"></view>
    <view class="title">录入合同</view>
  </view>
    <view class="detailBox" >
      <view class="label_box" data-id="1" bindtap="choose_box">
        <view class="title {{chooseAniBox[1]?'title_on':''}}">合同名称</view>
        <input class="label_input" wx:if="{{chooseAniBox[1]}}" focus="true" cursor-spacing="20" bindinput='demand_name' bindblur="demand_name_blur"></input>
        <view class="border {{chooseAniBox[1]?'animation':''}}"></view>
      </view>
      <view class="label_box" data-id="0" bindtap="choose_box">
        <view class="title {{chooseAniBox[0]?'title_on':''}}">对应项目</view>
        <picker bindchange="choosePro" range="{{chooseProArr}}" bindcancel="chooseProCancel" data-id="0"> 
          <view class="label_input">{{chooseProArr[chooseProIndex]}} 
            <text class="rp_info" wx:if="{{chooseProIndex}}" catchtap = "showProInfo">详情</text>
          </view>
        </picker>
        <view class="border {{chooseAniBox[0]?'animation':''}}"></view>
      </view>
      <view class="label_box" data-id="2" bindtap="choose_box">
        <view class="title {{chooseAniBox[2]?'title_on':''}}">合同公司</view>
        <input class="label_input" wx:if="{{chooseAniBox[2]}}" focus="true" cursor-spacing="20" bindinput='company_name' bindblur="company_name_blur"></input>
        <view class="border {{chooseAniBox[2]?'animation':''}}"></view>
      </view>
      <view class="label_boxs" >
        <view class="label_boxs_item" data-id="8" bindtap="choose_box">
          <view class="title {{chooseAniBox[8]?'title_on':''}}">对应客户</view>
           <picker bindchange="rp"  range="{{clientList}}" bindcancel="rpCancel" data-id="8"> 
              <view class="label_input">{{clientList[rpIndex]}}</view>
            </picker>
          <view class="border {{chooseAniBox[8]?'animation':''}}"></view>
        </view>
        <view class="label_boxs_item" data-id="4" bindtap="choose_box">
           <view class="title {{chooseAniBox[4]?'title_on':''}}">企业 ID</view>
            <picker bindchange="io"  range="{{ioArr}}" bindcancel="ioCancel" data-id="4"> 
              <view class="label_input">{{ioArr[ioIndex]}}</view>
            </picker>
          <view class="border {{chooseAniBox[4]?'animation':''}}"></view>
        </view>
      </view>
      <view class="label_boxs" >
        <view class="label_boxs_item" data-id="10" bindtap="choose_box">
          <view class="title {{chooseAniBox[10]?'title_on':''}}">起始时间</view>
          <picker mode="date" bindchange="startDate"   bindcancel="startDateCancel" data-id="10" start="{{startDate}}"> 
              <view class="label_input">{{startDate}}</view>
            </picker>
          <view class="border {{chooseAniBox[10]?'animation':''}}"></view>
        </view>
        <view class="label_boxs_item" data-id="9" bindtap="choose_box">
          <view class="title {{chooseAniBox[9]?'title_on':''}}">结束时间</view>
          <picker mode="date" bindchange="endDate"   bindcancel="endDateCancel" data-id="9" start="{{startDate}}"> 
              <view class="label_input">{{endDate}}</view>
            </picker>
          <view class="border {{chooseAniBox[9]?'animation':''}}"></view>
        </view>
      </view>
      <view class="label_boxs" >
        <view class="label_boxs_item" data-id="3" bindtap="choose_box">
          <view class="title {{chooseAniBox[3]?'title_on':''}}">合同金额</view>
         <input class="label_input" wx:if="{{chooseAniBox[3]}}" focus="true" cursor-spacing="20" bindinput='amount_money' bindblur="amount_money_blur"></input>
          <view class="border {{chooseAniBox[3]?'animation':''}}"></view>
        </view>
        <view class="label_boxs_item" data-id="5" bindtap="choose_box">
          <view class="title {{chooseAniBox[5]?'title_on':''}}">付款批次</view>
          <picker bindchange="batch"  range="{{batchArr}}" bindcancel="batch_blur" data-id="5"> 
              <view class="label_input">{{batch}}</view>
            </picker>
          <view class="border {{chooseAniBox[5]?'animation':''}}"></view>
        </view>
      </view>
      <view class="label_boxs" wx:for="{{batch}}">
        <view class="label_boxs_item" data-id="{{11 + index *2}}" bindtap="choose_box">
          <view class="title {{chooseAniBox[11 + index *2]?'title_on':''}}">第{{index + 1}}次付款时间</view>
          <picker mode="date" bindchange="payDate"   bindcancel="payDateCancel" data-id="{{11 + index *2}}" data-index="{{index}}"> 
              <view class="label_input">{{payDOList[index].payDate}}</view>
            </picker>
          <view class="border {{chooseAniBox[11 + index *2]?'animation':''}}"></view>
        </view>
        <view class="label_boxs_item" data-id="{{12 + index *2}}" bindtap="choose_box">
          <view class="title {{chooseAniBox[12 + index *2]?'title_on':''}}">第{{index + 1}}次付款金额</view>
          <input class="label_input" wx:if="{{chooseAniBox[12 + index *2]}}" data-index="{{index}}" focus="true" cursor-spacing="20" bindinput='payAmount' bindblur="payAmount_blur"></input>
          <view class="border {{chooseAniBox[12 + index *2]?'animation':''}}"></view>
        </view>
      </view>
      <view class="image_box">
        <image class="image" wx:for="{{images}}"  mode="aspectFill" src="{{item}}" bindtap="preview"></image>
        <image class="image"  bindtap="uploadImage" mode="aspectFill" src="../../image/chooseImage.png"></image>
      </view>
  </view>
  <view class="publish_btn" bindtap = "submit">录入合同</view>
  <view class="loading" wx:if="{{loading}}">
    <view class="loader_box">
       <text class="loader"><text class="loader-inner"></text></text>
    </view>
  </view>
</view>
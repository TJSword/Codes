// pages/ShareDetail/ShareDetail.js
const app = getApp()
import { request } from '../../utils/util.js';
Page({

  /**
   * 页面的初始数据
   */
  data: {
    statusBarHeight: app.globalData.statusBarHeight,
  },
  goBack: function (e) {//点击返回按钮 返回上一层页面
    wx.redirectTo({
      url: '../Index/Index',
    })
  },
  getShareInfo(id){
    request('/share/info/' + id,'get').then(res=>{
      console.log(res)
      let str = res.searchResult.shareInfo.endDate
      str = str.substring(str.length-5,str.length)
      res.searchResult.shareInfo.endDate = str
      this.setData({
        shareInfo: res.searchResult.shareInfo,
        joiners:res.searchResult.joinsList
      })
    })
  },
  join(){
    console.log(this.data.shareInfo.status == '0')
    if (this.data.shareInfo.status == '0'){
        request('/share/join/' + this.data.shareInfo.id,'get').then(res=>{
        if(res.code == 0){
          wx.showToast({
            title: '参与成功',
            icon:'none'
          })
        this.getShareInfo(this.data.shareInfo.id)
        }else{
          wx.showToast({
            title: '未知错误，请联系管理员',
            icon:'none'
          })
        }
      })
    }else{
      wx.showToast({
        title: '课题已经结束',
        icon:'none'
      })
    }
    
  },
  /**
   * 生命周期函数--监听页面加载
   */
  onLoad: function (options) {
    console.log(options)
    this.getShareInfo(options.id)
  },

  /**
   * 生命周期函数--监听页面初次渲染完成
   */
  onReady: function () {

  },

  /**
   * 生命周期函数--监听页面显示
   */
  onShow: function () {

  },

  /**
   * 生命周期函数--监听页面隐藏
   */
  onHide: function () {

  },

  /**
   * 生命周期函数--监听页面卸载
   */
  onUnload: function () {

  },

  /**
   * 页面相关事件处理函数--监听用户下拉动作
   */
  onPullDownRefresh: function () {

  },

  /**
   * 页面上拉触底事件的处理函数
   */
  onReachBottom: function () {

  },

  /**
   * 用户点击右上角分享
   */
  onShareAppMessage: function () {

  }
})